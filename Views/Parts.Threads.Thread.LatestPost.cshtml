@using NGM.Forum.Extensions
@using NGM.Forum.Models
@using Orchard.ContentManagement
@using Orchard.ContentManagement.Aspects

@{
    var postPart = (PostPart)Model.ContentPart;
    var commonPart = postPart.As<ICommonPart>();
}
<div class="latestpost">
    <a href="@Url.ViewThread(postPart.ThreadPart)">@T("Last Post")</a> <strong>@T("by")</strong> @commonPart.Owner.UserName <span class="meta">, @commonPart.PublishedUtc.Value.ToString("M/d/yyyy h:mm tt")</span>
</div>
@using Orchard.Utility.Extensions;
@{
    if (Model.Title != null) {
        Layout.Title = Model.Title;
    }
    
    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();

    var stickyClass = string.Empty;
    if (Model.ContentItem.Get(typeof (NGM.Forum.Models.ThreadPart)).IsSticky) {
        stickyClass = "sticky".HtmlClassify();
    }
}
<article class="content-item @contentTypeClassName @stickyClass">
    <header>
        @Display(Model.Header)
        @if (Model.Meta != null) {
        <div class="metadata">
            @Display(Model.Meta)
        </div>
        }
    </header>
    @Display(Model.Content)
    @if(Model.Footer != null) {
    <footer>
        @Display(Model.Footer)
    </footer>
    }
    dsfdsafd
</article>